{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "": ["node_modules/", "src/types/"]
    }
  },
  "include": [
    "src//",
    "commands//.js",
    "events//.js",
    "services//.js",
    "models//.js",
    "utils//.js",
    "config//.js",
    "routes//.js",
    "middleware//.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "/.spec.ts"
  ]
}